(setq shell-file-name "c:/msys/1.0/bin/bash")
;; todo: set "/bin/bash" for remote files

;; company coding style
(add-hook 'c-mode-common-hook
          (lambda()
            (subword-mode 1)            ; CamelCase!
            (c-add-style "xr-style"
                         (quote ("default-style" ;derives from my default
                                 (c-basic-offset . 4)
                                 )) t)) t)

(add-to-list 'sml/replacer-regexp-list
             '("/plink:dan.harms@\\([^:]+\\):" ":\\1:") t)
(add-to-list 'sml/replacer-regexp-list '("/home/dan\\.harms" "~") t)

(sml/apply-theme 'respectful)
(color-theme-solarized-dark)

