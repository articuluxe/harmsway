# -*- Mode: sh -*-
# .bash_host

# User specific aliases and functions

emacsbin=/usr/local/emacs/emacs
if [ ! -f "$emacsbin" ]; then
    emacsbin=emacs
fi
export EMACSX=$emacsbin
export EDITOR="$EMACSX -nw"
alias emacs=$EDITOR

# source the site files
[ -r ~/."$SITE".env ] && . ~/."$SITE".env
[ -r ~/.bash_"$SITE" ] && . ~/.bash_"$SITE"

lhome()
{
   cd $LHOME
}

use_gcc()
{
   export CC=$CSTDLIB_BIN/gcc
   export CXX=$CSTDLIB_BIN/g++
}

use_clang() {
    export CC=$CLANG_BIN/clang
    export CXX=$CLANG_BIN/clang++
}

use_gcc
