# -*- Mode: sh -*-
# .bash_viking

export SITE=talbot
unset SSH_ASKPASS

export EMACSX=/usr/local/emacs/25.1/bin/emacs
export EDITOR="$EMACSX -nw"
alias emacs=$EDITOR

python=~/anaconda2/bin
dart=/usr/local/dart/1.15.0/dart-sdk
cask=$HOME/.cask/bin
export PATH=$HOME/bin:/sbin/:/usr/lib64:$python:$cask:$PATH:.

export CSTDLIB_ROOT=/usr/local
export CSTDLIB_INC=/usr/local/include/c++/5.3.0/
export CSTDLIB_BIN=/usr/local/bin

export LD_LIBRARY_PATH=/usr/local/lib

# source the site file
if [ -f ~/.bash_$SITE ]; then
   . ~/.bash_$SITE
fi


use_clang()
{
   export CC=/usr/local/bin/clang
   export CXX=/usr/local/bin/clang++
}

use_gcc()
{
   export CC=/usr/local/bin/gcc
   export CXX=/usr/local/bin/g++
   export CXX_FLAGS="-std=c++14 -Wall -Wextra -pedantic -Wno-unused-local-typedefs"
}

use_gcc
