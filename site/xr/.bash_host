# -*- Mode: sh -*-
# .bash_host

# User specific aliases and functions

if [ -f /usr/local/emacs/emacs ]; then
    export VISUAL=/usr/local/emacs/emacs
else
    export VISUAL=emacs
fi
export EDITOR="$VISUAL -nw"
alias emacs="\$EDITOR"

# source the site files
[ -r ~/."$SITE".env ] && . ~/."$SITE".env
[ -r ~/.bash_"$SITE" ] && . ~/.bash_"$SITE"

lhome()
{
   cd "$LHOME" || exit 1
}

use_gcc()
{
   export CC=$CSTDLIB_BIN/gcc
   export CXX=$CSTDLIB_BIN/g++
}

use_clang() {
    export CC=$CLANG_BIN/clang
    export CXX=$CLANG_BIN/clang++
}

use_gcc
