# -*- Mode: sh -*-
# .bash_viking

export VISUAL=/usr/local/bin/emacs
export EDITOR="$VISUAL -nw"
alias emacs="\$EDITOR"

# source the site files
[ -r ~/."$SITE".env ] && . ~/."$SITE".env
[ -r ~/.bash_"$SITE" ] && . ~/.bash_"$SITE"


use_clang()
{
    export CC=/usr/bin/clang
    export CXX=/usr/bin/clang++
}

use_gcc()
{
    export CC=${CSTDLIB_BIN}/gcc-7
    export CXX=${CSTDLIB_BIN}/g++-7
    export CXX_FLAGS="-Wall -Wextra -pedantic -Wno-unused-local-typedefs"
}

use_gcc
