# -*- Mode: sh -*-
# .bash_xr

export ONE_TICK_CONFIG=/opt/1tick/client_data/config/one_tick_config.txt

export ORIGPATH=$PATH
export LD_LIBRARY_PATH=/usr/java/latest/jre/lib/amd64/server:/opt/x3p/xrt_a/llvm/3.6.1/lib:/opt/x3p/xrt_a/base/lib64:/opt/anaconda-python-2.7.8/lib:$LD_LIBRARY_PATH

export CXX_FLAGS="-std=c++0x -Wall -Wextra -pedantic -Wno-unused-local-typedefs"

# set display to windows host (CHIHQ-DEV84)
display-remote() { export DISPLAY=10.10.102.157:0.0; }
# reset display to local host
display-local() { export DISPLAY=:0.0; }

# distcc
distcc-init()
{
   distcc=/usr/bin/distcc
   masquerade_dir=~/bin/distcc

   sudo iptables -A INPUT -s 0/0 -i eth0 -p TCP --dport 3632 -j ACCEPT
   mkdir -p $masquerade_dir
   pushd $masquerade_dir
   ln -sf $distcc gcc
   ln -sf $distcc cc
   ln -sf $distcc g++
   ln -sf $distcc c++
   popd
}
distcc-start()
{
   distccd --daemon --log-file=~/logs/distcc.log --allow 10.10.102.0/23 10.10.103.0/23 --jobs=4
}
