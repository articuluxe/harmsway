(add-to-list 'default-frame-alist
             (cons 'height (my/get-ideal-frame-height 82)))
(add-to-list 'default-frame-alist
             '(width . 95))

(setq epg-gpg-program "gpg2")

(with-eval-after-load 'install-world
  (add-to-list 'harmsway-install-cmd-alist "xr-release.sh"))

(with-eval-after-load 'magit
  (push (cons (expand-file-name "~/org") 0) magit-repository-directories))

(setq-default flycheck-gcc-language-standard "c++14")
(setq-default flycheck-clang-language-standard "c++14")

