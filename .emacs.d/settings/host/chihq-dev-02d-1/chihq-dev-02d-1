(my/load-site-file "xr")

(add-to-list 'default-frame-alist
             (cons 'height (my/get-ideal-frame-height 80)))
(add-to-list 'default-frame-alist
             '(width . 95))

(setq-default flycheck-gcc-language-standard "c++14")
(setq-default flycheck-clang-language-standard "c++14")

