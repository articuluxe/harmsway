set -e

OSDIR=$(uname -s)
HOSTDIR=$(hostname -s)
BUILDDIR=$OSDIR/$HOSTDIR
DATE=$(date '+%Y%m%d-%H%M%S')

export PATH=/bin:/sbin:/usr/bin:/usr/local/bin:/usr/local/sbin:/usr/sbin:.
cd src
if [ -d bld/$BUILDDIR ]; then
    mv bld bld_$DATE
    gzip -r bld_$DATE
fi
mkdir -p bld/$BUILDDIR

./autogen.sh
cd bld/$BUILDDIR
../../../configure --prefix=$HOME/opt/stow/ctags --program-prefix=ex --disable-xml
make
make install
mkdir -p $HOME/opt/stow
cd $HOME/opt/stow
stow -R ctags

## Local Variables:
## mode: sh
## End:
