;;; Code:

(setq deft-directory "~/Dropbox/notes")

(with-eval-after-load 'org
  (add-to-list 'org-agenda-files "~/Dropbox"))

(add-hook
 'c-initialization-hook
 (lambda ()
   (c-add-style "talbot"
                (quote
                 ("harmsway"            ;parent style
                  (c-offsets-alist
                   . (
                      ;; talbot style customizations
                      (innamespace . 0)
                      ))
                  )) t)
   ) t)

(setq c-default-style '((java-mode . "java") (awk-mode . "awk") (other . "talbot")))

(add-hook
 'c-mode-common-hook
 (lambda ()
   ;; talbot-specific customization
   ) t)

(proviso-define-project
 "ncio" "/src/ncio/"
 :compile-cmds '("make" "genbuild.sh")
 :build-subdirs '((:name "dbg" :dir "debug" :register ?d)
                  (:name "rls" :dir "release" :register ?r))
 :debug-subdirs '((:name "DEBUG" :dir "debug")
                  (:name "RELEASE" :dir "release"))
 :initfun (lambda (proj)
            (proviso-put
             proj :proj-alist
             `((:name "ncio" :dir "src")
               (:name "gtest" :dir "ext/googletest/googletest/include")
               (:name "boost" :dir "/usr/local/include/boost"
                      :ctags-opts "--exclude=typeof --exclude=fusion --exclude=phoenix --exclude=spirit")
               (:name "c++lib" :dir ,(substitute-env-vars "$CSTDLIB_INC")
                      :ctags-opts "--language-force=c++ -h=.h.H.hh.hpp.hxx.h++.inc.def.")
               ))))

(proviso-define-project
 "punch" "/src/punch/"
 :compile-cmds '("make" "genbuild.sh")
 :build-subdirs '((:name "dbg" :dir "debug" :register ?d)
                  (:name "rls" :dir "release" :register ?r))
 :initfun (lambda (proj)
            (proviso-put
             proj :proj-alist
             `((:name "punch" :dir "src")
               (:name "asio" :dir "/usr/local/include")
               (:name "gtest" :dir "ext/googletest/googletest/include")
               (:name "boost" :dir "/usr/local/include/boost"
                      :ctags-opts "--exclude=typeof --exclude=fusion --exclude=phoenix --exclude=spirit")
               (:name "c++lib" :dir ,(substitute-env-vars "$CSTDLIB_INC")
                      :ctags-opts "--language-force=c++ -h=\".h.H.hh.hpp.hxx.h++.inc.def.\"")
               ))))

;; talbot ends here
