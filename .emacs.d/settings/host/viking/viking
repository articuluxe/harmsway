(with-eval-after-load 'choose-font
  (setq choose-font-list '( "Office Code Pro 10"
                            "CamingoCode 12"
                            "FantasqueSansMono 13"
                            "Luculent 11"
                            "Cascadia Code 12"
                            "Iosevka 11"
                            "Hack 11"
                            "Cousine 12"
                            "PT Mono 14"
                            "InputMono 12"
                            ))
  (choose-font-init))

(add-to-list 'default-frame-alist
             (cons 'height (my/get-ideal-frame-height 75)))
(add-to-list 'default-frame-alist
             '(width . 90))

(setq epg-gpg-program "gpg2")

(my/load-site-file "talbot")

;; (setq epa-pinentry-mode 'loopback)      ;for gpg v2.1+

(setq-default flycheck-gcc-language-standard "c++1z")
(setq-default flycheck-clang-language-standard "c++1z")
(setq flycheck-c/c++-gcc-executable "g++-7")

