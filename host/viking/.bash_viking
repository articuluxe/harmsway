# -*- Mode: sh -*-
# .bash_viking

export SITE=talbot
unset SSH_ASKPASS

export EMACSX=emacs
export EDITOR="$EMACSX -nw"
alias emacs=$EDITOR

# dart=/usr/local/dart/1.15.0/dart-sdk
cask=$HOME/.cask/bin
export PATH=$HOME/bin:$cask:/usr/local/bin:/bin:/sbin:/usr/bin:.

export CSTDLIB_ROOT=/usr
export CSTDLIB_INC=$CSTDLIB_ROOT/include/c++/5.4.0/
export CSTDLIB_BIN=$CSTDLIB_ROOT/bin

export LD_LIBRARY_PATH=/usr/local/lib

# source the site file
if [ -f ~/.bash_$SITE ]; then
   . ~/.bash_$SITE
fi


use_clang()
{
   export CC=/usr/bin/clang
   export CXX=/usr/bin/clang++
}

use_gcc()
{
   export CC=/usr/bin/gcc
   export CXX=/usr/bin/g++
   export CXX_FLAGS="-std=c++14 -Wall -Wextra -pedantic -Wno-unused-local-typedefs"
}

use_gcc
