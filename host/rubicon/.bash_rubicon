# -*- Mode: sh -*-
# .bash_rubicon

export EMACSX=/Applications/emacs-25.1.app/Contents/MacOS/Emacs
export EDITOR="$EMACSX -nw"
alias emacs=$EDITOR

export SITE=talbot

# source the host file
if [ -f ~/.bash_$SITE ]; then
   . ~/.bash_$SITE
fi

# python=/opt/anaconda-python-2.7.8/bin
cmake=/Applications/CMake.app/Contents/bin
export PATH=$HOME/bin:/usr/local/bin:$cmake:$PATH:.
export DYLD_LIBRARY_PATH=/usr/local/lib:$HOME/src/dist/lib

# export TERM=xterm-256color

export CSTDLIB_ROOT=/usr
export CSTDLIB_INC=$CSTDLIB_ROOT/include/c++/4.2.1
export CSTDLIB_BIN=$CSTDLIB_ROOT/bin
