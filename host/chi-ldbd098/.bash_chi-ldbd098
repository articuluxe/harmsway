# -*- Mode: sh -*-
# .bash_chi-ldbd098

export VISUAL=/usr/bin/emacs
export EDITOR="$VISUAL -nw"
alias emacs="\$EDITOR"

# NOT sourcing the host file

use_gcc()
{
   export CC=$CSTDLIB_BIN/gcc
   export CXX=$CSTDLIB_BIN/g++
   export CXX_FLAGS="-Wall -Wextra -pedantic -Wno-unused-local-typedefs"
}

use_gcc
