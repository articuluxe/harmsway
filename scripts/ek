#!/usr/bin/env sh
# -*- Mode: sh -*-
# ek --- kill emacs daemon
# Copyright (C) 2018-2020  Dan Harms (dharms)
# Author: Dan Harms <enniomore@icloud.com>
# Created: Thursday, August  9, 2018
# Version: 1.0
# Modified Time-stamp: <2020-12-02 10:54:41 dharms>
# Modified by: Dan Harms
# Keywords: emacs tools

exe="$EMACS_CLIENT"

server_ok()
{
    "$exe" -a "false" -e "(boundp 'server-process)"
}

if [ "t" = "$(server_ok)" ]; then
    echo "Shutting down Emacs server"
    "$exe" -e '(kill-emacs)'
else
    echo "Emacs server not running"
fi

# code ends here
