# -*- Mode: sh -*-
# .bash_viking

export VISUAL="$EMACS_BIN"
export EDITOR="$VISUAL -nw"
alias emacs="\$EDITOR"

# source the site files
[ -r ~/."$SITE".env ] && . ~/."$SITE".env
[ -r ~/.bash_"$SITE" ] && . ~/.bash_"$SITE"

# ssh keys
ssh-add ~/.ssh/viking.ssh.ed25519

use_clang()
{
    export CC=/usr/bin/clang
    export CXX=/usr/bin/clang++
}

use_gcc()
{
    export CC=${CSTDLIB_BIN}/gcc-9
    export CXX=${CSTDLIB_BIN}/g++-9
    export CXX_FLAGS="-Wall -Wextra -pedantic -Wno-unused-local-typedefs"
}
