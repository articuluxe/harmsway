[user]
	name = Dan Harms
	email = dan.harms@xrtrading.com
[core]
    editor = $EDITOR
    excludesfile = ~/.gitignore
[color]
	ui = true
[push]
	default = simple
[pull]
	rebase = true
[diff]
	tool = diffgui
[difftool]
	prompt = false
[difftool.diffterm]
	cmd = /usr/bin/env LOCAL=$LOCAL REMOTE=$REMOTE $EDITOR --load ~/config/difftool.el
[difftool.diffgui]
	cmd = /usr/bin/env LOCAL=$LOCAL REMOTE=$REMOTE $EMACSX --load ~/config/difftool.el
[merge]
    tool = mergegui
    conflictstyle = diff3
[mergetool]
	prompt = false
[mergetool.mergeterm]
	cmd = /usr/bin/env LOCAL=$LOCAL REMOTE=$REMOTE BASE=$BASE MERGED=$MERGED $EDITOR --load ~/config/mergetool.el
[mergetool.mergegui]
	cmd = /usr/bin/env LOCAL=$LOCAL REMOTE=$REMOTE BASE=$BASE MERGED=$MERGED $EMACSX --load ~/config/mergetool.el
[credential]
    helper = store
    # helper = cache --timeout=86400
[alias]
    listbr = "!sh() { git for-each-ref --sort=-committerdate --count=10 refs/heads/ --format='%(HEAD)%(refname:short)|%(objectname:short)|%(contents:subject)|%(authorname)|(%(committerdate:relative))' | column -ts'|' ; }; sh"
    # column on linux chokes on colors
#    listbr = "!sh() { git for-each-ref --sort=-committerdate --count=10 refs/heads/ --format='%(HEAD)%(color:yellow)%(refname:short)%(color:reset)|%(color:red)%(objectname:short)%(color:reset)|%(contents:subject)|%(color:blue)%(authorname)%(color:reset)|(%(color:green)%(committerdate:relative)%(color:reset))' | column -ts'|' ; }; sh"
