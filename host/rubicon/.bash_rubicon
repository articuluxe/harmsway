# -*- Mode: sh -*-
# .bash_rubicon

export VISUAL=/Applications/emacs-25.2.app/Contents/MacOS/Emacs
export EDITOR="$VISUAL -nw"
alias emacs="\$EDITOR"

# source the host files
[ -r ~/."$SITE".env ] && . ~/."$SITE".env
[ -r ~/.bash_"$SITE" ] && . ~/.bash_"$SITE"

use_clang()
{
   export CC=/usr/bin/clang
   export CXX=/usr/bin/clang++
}

use_gcc()
{
    export CC=${CSTDLIB_BIN}/gcc-7
    export CXX=${CSTDLIB_BIN}/g++-7
}

use_gcc
