(with-eval-after-load 'org-mode
  (add-to-list 'org-agenda-files "~/org/talbot.org"))

(add-hook
 'c-mode-common-hook
 (lambda()
   (c-add-style "talbot-style"
                (quote ("default-style" ;derives from my default
                        (c-offsets-alist
                         . (
                            ;; insert customizations
                            ))
                        )) t)) t)

(add-hook 'after-init-hook
          (lambda()
            (setq my/choose-func 'choose-via-ivy)
            (my/activate-ivy)
            ))

;; talbot ends here
