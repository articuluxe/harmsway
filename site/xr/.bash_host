# -*- Mode: sh -*-
# .bash_host

# User specific aliases and functions
export SITE=xr
export LHOME=/lhome/dan.harms

emacsbin=/usr/local/emacs/emacs
if [ ! -f "$emacsbin" ]; then
    emacsbin=emacs
fi
export EMACSX=$emacsbin
export EDITOR="$EMACSX -nw"
alias emacs=$EDITOR

# clang
CLANG_ROOT=/opt/x3p/xrt_a/llvm/3.6.1
CLANG_LIB=$CLANG_ROOT/lib
CLANG_BIN=$CLANG_ROOT/bin
# gcc
export CSTDLIB_ROOT=/opt/x3p/xrt_a/base
#/usr/local/gcc-4.9.1
export CSTDLIB_INC=$CSTDLIB_ROOT/include/c++/4.9.1
export CSTDLIB_BIN=$CSTDLIB_ROOT/bin

python=/opt/anaconda-python-2.7.8/bin
#java=/usr/java/latest/bin:/usr/java/latest/jre/bin
export PATH=$CLANG_BIN:$python:$HOME/bin:$PATH:.

export COMPILER_PATH=$CSTDLIB_BIN

# source the site file
if [ -f ~/.bash_$SITE ]; then
   . ~/.bash_$SITE
fi

lhome()
{
   cd $LHOME
}

use_gcc()
{
   export CC=$CSTDLIB_BIN/gcc
   export CXX=$CSTDLIB_BIN/g++
}

use_clang() {
    export CC=$CLANG_BIN/clang
    export CXX=$CLANG_BIN/clang++
}

use_gcc
