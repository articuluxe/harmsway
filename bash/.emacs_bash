if [ "${INSIDE_EMACS}" = "vterm" ]; then
   export TERM=xterm-256color
elif [ "${INSIDE_EMACS}" != "" ]; then
    export TERM=emacs
fi

if [ ! -z "$(command -v dircolors)" ]; then
    eval "$(dircolors -b ~/.dircolors)"
else
    export TERM=xterm-256color
fi

